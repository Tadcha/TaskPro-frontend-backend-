{
  "name": "taskpro-backend-api",
  "version": "1.0.0",
  "description": "Professional Task Management API - Full-Stack Portfolio Project",
  "main": "server.js",
  "private": false,
  "author": {
    "name": "Florin Racila",
    "email": "florin.racila@outlook.com"
  },
  "license": "MIT",
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "rest-api",
    "task-management",
    "portfolio",
    "full-stack"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/taskpro-backend"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon ./server.js",
    "dev": "npm run start:dev",
    "build": "echo 'Backend build completed - ready for deployment'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint **/*.js",
    "lint:fix": "eslint --fix **/*.js",
    "format": "prettier --write **/*.js",
    "setup": "node generateSecret.js",
    "health": "curl http://localhost:5000/api/health || echo 'Server not running'",
    "docs": "echo 'API Documentation: http://localhost:5000/api-docs'"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cloudinary": "^1.37.2",
    "cookie-parser": "^1.4.6",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "^16.0.3",
    "dotenv-safe": "^9.1.0",
    "express": "4.17.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^7.1.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.0",
    "morgan": "1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nanoid": "^3.3.4",
    "nodemailer": "^6.9.3",
    "passport": "^0.6.0",
    "passport-google-oauth2": "^0.2.0",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "eslint": "7.19.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "5.2.0",
    "jest": "^29.0.0",
    "supertest": "^7.1.3",
    "@types/jest": "^29.0.0",
    "nodemon": "2.0.15",
    "prettier": "^2.8.0"
  },
  "homepage": "https://github.com/yourusername/taskpro-backend#readme",
  "bugs": {
    "url": "https://github.com/yourusername/taskpro-backend/issues"
  }
}
